= content_for :css do
  = stylesheet_link_tag :devise

.login-header
  %img{src: "/mooveit.png"}

.login-big
  %h2 Sign in

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %div
      = f.label :email
      = f.email_field :email

    %div
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      .remember-me= f.check_box :remember_me
      = f.label :remember_me

    %div= f.submit "Sign in", class: 'btn btn-primary'

  = render "devise/shared/links"
